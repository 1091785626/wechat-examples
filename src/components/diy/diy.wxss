.diy-title-1{
	background: #28c192;
	color: #fff;
}
.diy-title-2 text{
	padding: 20rpx;
	border-bottom: 1rpx solid red;
}
.diy-title-3{
	line-height:4rpx;
	border-left:20vw solid #ddd;
	border-right:20vw solid #ddd;
	text-align:center;
}
.diy-title-4{
	border-left:2px solid red;
	margin-left:10rpx;
	padding: 15rpx;
}

.diy-top-nav-0{
	display: flex;
	align-items: center;
	justify-content: space-between;
	text-align: center;
}
.diy-top-nav-0 ._navigator{
	line-height: 45rpx;
	padding:20rpx;
	flex:1 0 auto;
}
.diy-top-nav-1{
	display: flex;
	align-items: center;
	justify-content: space-between;
	text-align: center;
}
.diy-top-nav-1 ._navigator{
	line-height: 45rpx;
	padding:20rpx;
	flex:1 0 auto;
}
.diy-top-nav-1 ._navigator:not(:last-child){
	margin-right: 5rpx;
}

.diy-goods-1 image{
	width: 96vw;
	height: 96vw;
	padding:2vw;
}
.diy-goods-2 image{
	width: 46vw;
	padding:2vw;
}
.diy-goods-2>view{
	box-sizing: border-box;
	flex: 0 0 50%;
}
.diy-goods-3 image{
	flex:0 0 145rpx;
	height:145rpx;
}

.diy-img-nav-1 ._imgs{
	display: flex;
	flex-flow: row wrap;
	align-content: flex-start;
}
.diy-img-nav-1 ._imgs>._navigator{
	box-sizing: border-box;
	flex: 0 0 25%;
	padding-right:5rpx;
	padding-bottom: 5rpx;
	text-align: center;
}
.diy-img-nav-1 ._imgs image,.diy-img-nav-2 ._imgs image{
	width: 100%
}

.diy-img-nav-2 ._imgs{
	display: flex;
	flex-flow: row wrap;
	align-content: flex-start;
}
.diy-img-nav-2 ._imgs>._navigator{
	box-sizing: border-box;
	flex: 0 0 25%;
	padding-right:5rpx;
	text-align: center;
	position: relative;
}
.diy-img-nav-2 ._imgs text{
	position:absolute;
	bottom:10%;
	width:90%;
	left:5%;
	border-radius:15rpx;
	color: #fff;
	padding:5rpx 0;
}

.diy-img-nav-3 ._imgs{
	display: flex;
	flex-flow: row wrap;
	align-content: flex-start;
}
.diy-img-nav-3 ._imgs>._navigator{
	box-sizing: border-box;
	flex: 0 0 49%;
	display: flex;
	align-items: center;
	margin-right:1%;
	margin-bottom: 1%;
	background: #fff;
	padding:10rpx;
}
.diy-img-nav-3 ._imgs image{
	flex: 0 0 33.3333%;
	border:1rpx solid #f9f9f9;
	padding:1rpx 15rpx 1rpx 1rpx;
}

.diy-showcase-1 image{
	width:50vw;
	height:735rpx;
	margin-right:1vw;
}
.diy-showcase-1 ._navigator{
	position: relative;
}
.diy-showcase-1 ._navigator text{
	background:rgba(0,0,0,.5);
	position:absolute;
	bottom:8rpx;
	left:0;
	width:93%;
	padding:10rpx;
	text-align: center;
	color: #fff;
}
.diy-cut-off{
	border-bottom: 1px dashed red;
}

.diy-notice{
	position: relative;
	overflow: hidden;
	height: 30rpx;
}
.diy-notice>view{
	color: #e03696;
	line-height: 30rpx;
	width: 100%;
	position: absolute;
	/*animation: marquee 5s linear infinite;*/
}
@keyframes marquee {
	0% {
		left: 0
	}
	100% {
		left: -100%
	}
}
.diy-header {
	position: relative;
}
.diy-header ._shade image{
	width:100vw;
	height: 33.3vw;
	position: relative;
}
.diy-header ._shade:before{
	content: '';
	background-color: rgba(0,0,0,.4);
	width:100vw;
	height: 33.3vw;
	position: absolute;
	left: 0;
	z-index: 9;
	top: 0;
}
.diy-header ._caption{
	z-index: 99;
	position: absolute;
	bottom: 5rpx;
	left: 0;
	right: 0;
}
.diy-header ._imgs{
	height:15vw;
	width:15vw;
	margin-right: 15rpx;
}