.c-sku image{
    flex:0 0 180rpx;
    height:180rpx;
    border-radius:10rpx;
    margin-top:-60rpx;
}
.c-sku ._header{
    padding-left:60rpx
}
.c-sku ._dt{
    width: 100%;
    font-size: 32rpx;
    line-height: 60rpx;
    font-weight: bold;
}
.c-sku ._dd{
    margin:0 16rpx 10rpx 0;
    color:#333;
    background:#ddd;
    padding:0 20rpx;
    font-size: 28rpx;
    line-height: 56rpx;
    border-radius: 4rpx;
}
.c-sku ._dd._none{
    pointer-events:none;
    color:#999;
    text-decoration: line-through;
    background:#EFEEEE;
}
.c-sku ._sel{
    background:#ff6765;
    color:white;
}

