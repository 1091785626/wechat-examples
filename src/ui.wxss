/**
 * UI库
 * 表单
 * 搜索框
 * 链接跳转（一行显示）
 * Tab
 * 弹出层
 */
.g-item{
	background:#fff;
	display: flex;
	align-items: center;
}
.g-item view,.g-item navigator{
	flex:0 1 100%;
}
.g-fixed{
	position:fixed;
	bottom:0;
	width:100%;
	line-height:35rpx;
}
/**
 * 背景颜色
 */
[class*="g-bg-"]{
	color:white; 
}

.g-bg-white{
	background:#fff;
	color:inherit;
}

.g-bg-pink{
	background:#F5374D;
}

.g-bg-gray{
	background:#EBEBEB;
}

.g-bg-green{
	background: #28c192;
}

.g-bg-yellow{
	background: yellow;
	color:inherit;
}
/**
 * 文字颜色
 */
.g-gray{
	color:#9C9C9C;
}

.g-pink{
	color:#F5374D;
}

.g-white{
	color:#fff;
}