/**
 * UI库
 * 表单
 * 搜索框
 * 链接跳转（一行显示）
 * Tab
 * 弹出层
 */
.g-item{
	background:#fff;
	display: flex;
	align-items: center;
}

.g-fixed{
	position:fixed;
	bottom:0;
	width:100%;
	line-height:35rpx;
}
.g-popup {
    position: fixed;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: flex-end;
    z-index: 1999;
    background:rgba(0,0,0,0);
    top:100vh
}
/**
 * 背景颜色
 */
[class*="g-bg-"]{
	color:white; 
}

.g-bg-white{
	background:#fff;
	color:inherit;
}

.g-bg-pink{
	background:#F5374D;
}

.g-bg-gray{
	background:#EBEBEB;
}

.g-bg-green{
	background: #28c192;
}

.g-bg-blue{
	background: #10aeff;
}
.g-bg-orange{
	background: #f60;
}
/**
 * 文字颜色
 */
.g-gray{
	color:#9C9C9C;
}

.g-pink{
	color:#F5374D;
}

.g-white{
	color:#fff;
}

/**
 * 搜索框
 */
.g-search .section input{
	background: #fff;
	color: #000;
	height: 70rpx;
	border-radius: 10rpx;
	border-radius: 6rpx;
	flex:1;
	padding:0 80rpx;
	position: relative;
}
.g-search .section text{
	position: absolute;
	left:5%;
}
/**
 * 按钮
 */
.g-step{
    display:flex;
    align-items: flex-end;
}
.g-step text{
    width: 70rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 6rpx;
    border: 2rpx solid #e6e9ed;
    text-align: center;
    color: #333;
    margin: 0 2rpx
}
.g-step input {
    width: 100rpx;
    height: 48rpx;
    text-align: center;
    border: 2rpx solid #e6e9ed;
}
